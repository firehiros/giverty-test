{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@apps/*": ["src/apps/*"],
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"],
      "@guards/*": ["src/guards/*"],
      "@decorators/*": ["src/decorators/*"],
      "@services/*": ["src/services/*"],
      "@messages/*": ["src/messages/*"]
    }
  }
}
